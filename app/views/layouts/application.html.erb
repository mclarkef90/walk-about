<!DOCTYPE html>
<html>
  <head>
    <title>WalkAbout</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class= "navbar">

      <%if logged_in? && current_user.admin == true%>
      <%= link_to "Categories", admin_categories_path %> |
      <%= link_to "All Activities", activities_path%> |
      <%= link_to "My Activities", user_activities_path(current_user.id)%> |
      <%= link_to "Create Activity", new_activity_path%> |
      <%= link_to "Comments", comments_path %> |
      <%= link_to "My Comments", user_comments_path(current_user.id)%> |
      <%= link_to "Sign Out", signout_path, method: 'delete' %>

      <% elsif logged_in? && current_user.admin == false%>
      <%= link_to "All Activities", activities_path%> |
      <%= link_to "My Activities", user_activities_path(current_user.id)%> |
      <%= link_to "Create Activity", new_activity_path%> |
      <%= link_to "Sign Out", signout_path, method: 'delete' %>

      <%else%>
      <%= link_to "Sign Up", signup_path%> |
      <%= link_to "Sign In", signin_path%> |
      <%= link_to "Sign In with Google", '/auth/google_oauth2'%>
      <%end%>
    </div>

    <div>
      <% if flash[:message] %>
        <%= flash[:message] %>
      <%end%>

      <%=@error%>
      </div>

    <%= yield %>

  </body>
  <footer>
    <p>Walk About Footer</p>
  </footer>
</html>
